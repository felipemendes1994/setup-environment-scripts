## CONFIGURACOES PESSOAIS

	# CRIA DIRETORIO DE DOCUMENTOS PESSOAIS
		mkdir ~/Documentos/pessoais && cd ~/Documentos/pessoais

	#CRIA DIRETORIA PARA ARMAZENAR AS WORKSPACES
		mkdir ~/.workspaces/develop
		mkdir ~/.workspaces/test

	# Papirus Icons
		sudo add-apt-repository ppa:papirus/papirus
		sudo apt install papirus-icon-theme
		gsettings set org.gnome.desktop.interface icon-theme 'Papirus'

	# CONFIGURA UMA CHAVE SSH PARA O GITHUB
		ssh-keygen
		# Aguardando configurar a chave ssh que foi criado no github
		read -p "Set the generated ssh key into github and press any key to continue... " -n1 -s

	# CLONA O REPOSITORIO COM OS ARQUIVOS DE CONFIGURACAO
		git clone git@github.com:felipemendes1994/setup-environment-files.git
		cd ./setup-environment-files

	# CONFIGURA PASTAS DE ARQUIVOS PESSOAIS E OS DOCUMENTOS LA DENTRO
		# Aqui talvez eu vou fazer download dos arquivo disponiveis no google drive atraves de um link
	
	# ADICIONA AS EXTENSOES NECESSARIAS PARA O BRAVE
		# Copiando as extensões para dentro da pasta do Brave
		rm -rf ~/.config/BraveSoftware/Brave-Browser/Default/Extensions
		cp -r ./Extensions ~/.config/BraveSoftware/Brave-Browser/Default

	# ADICIONA O ARQUIVO DE CONFIGURACOES DO NAVEGADOR
		rm -rf ~/.config/BraveSoftware/Brave-Browser/Default/Preferences
		cp -r ./Preferences ~/.config/BraveSoftware/Brave-Browser/Default

	# CONFIGURANDO OS FAVORITOS DO NAVEGADOR
		# Por enquanto vou deixar aqui em branco pois vou usar a extensao do navegador

	# CONFIGURANDO OS COMANDOS PERSONALIZADOS
		# Criando e adicionando o diretorio .local/bin ao $PATH
		BIN="$HOME/.local/bin"
		if [[ ! -d BIN ]]; then
			mkdir $BIN
			export PATH="$BIN:$PATH"
		fi

		# Criando link simbolico dos comandos para .local/bin
	
	# CRIANDO UM LINK SIMBOLICO PARA O BASH_ALIASES
		# O bash_aliases eu vou pegar do que estiver dentro do projeto e criar apenas um link simbolico
		ln -s $HOME/Documentos/pessoais/setup-environment-files/bash_aliases $HOME/.bash_aliases
	
	# CONFIGURANDO GIT BRANCH NO TERMINAL
		# https://coderwall.com/p/fasnya/add-git-branch-name-to-bash-prompt
		parse_git_branch() {
			git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
		}
		export PS1="\u@\h \[\033[32m\]\w\[\033[33m\]\$(parse_git_branch)\[\033[00m\] $ "

	# CRIANDO ATALHO DO MENU DE ANOTACOES
		#ln -s $ORIGEM $DESTINO
		ln -s $HOME/Documentos/pessoais/setup-environment-files/atalhos/notas.desktop $HOME/.local/share/applications/notas.desktop

	
	echo 'Starting manual configuration...'
	read -p '' -n1 -s

	echo ''

	# ADICIONANDO EXCECAO AO SUDOERS PARA NAO PEDIR SENHA COM ROOT
		# Ainda pesquisando um jeito de conseguir fazer essa bagaça funcionar por linha de comando
		echo 'paste the following command into /etc/sudoers file'
		echo '$USER ALL=(ALL) NOPASSWD: ALL'
		read -p '' -n1 -s

		echo ''

	# EXTENSOES DO GNOME SHELL
		sudo apt install gnome-tweaks -y
		sudo apt install gnome-shell-extension-multi-monitors -y

		echo 'Starting gnome extensions setup...'
		echo 'Open the following urls and activate all the extensions'
		echo ''
		read -p '' -n1 -s

		# Dash to panel/ Dash to dock
		echo 'https://extensions.gnome.org/extension/307/dash-to-dock/'
		read -p '' -n1 -s

		# Desktop Icons
		echo 'https://extensions.gnome.org/extension/1465/desktop-icons/'
		read -p '' -n1 -s
		
		# sound input and output device chooser
		echo 'https://extensions.gnome.org/extension/906/sound-output-device-chooser/'
		read -p '' -n1 -s

		# status area horizontal spacing
		echo 'https://extensions.gnome.org/extension/355/status-area-horizontal-spacing/'
		read -p '' -n1 -s

		# system monitor
		echo 'https://extensions.gnome.org/extension/120/system-monitor/'
		read -p '' -n1 -s


	# MANUAL CONFIGURATIONS
	echo 'Now itś time for you to download the files you want from drive, and place them in personal folder'


	
## REMOVENDO TODOS OS PACOTES DESNECESSARIOS
	sudo apt autoremove -y
	
