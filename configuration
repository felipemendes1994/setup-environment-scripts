#!/bin/bash

__folders() {
	# echo 'Creating needed folders'
	# mkdir -p ~/Documentos/pessoais
	mkdir -p ~/Documentos/maplink
	mkdir -p ~/.local/bin
	mkdir -p ~/.local/files
	mkdir -p ~/.vpn
	mkdir -p ~/.local/share/gnome-shell/extensions
	mkdir -p ~/.intellij
	mkdir -p ~/.oh-my-posh
}

__commands() {
	# echo 'Addind ~/.local/bin to PATH'
	BIN='/home/felipe/.local/bin'
	# ln -s $HOME/Documentos/pessoais/configuration/files/comandos $HOME/.local/bin
	# export PATH="$BIN:$PATH"
	ln -s $HOME/Documentos/pessoais/configuration/files/comandos/vpn $HOME/.local/bin/vpn
	ln -s $HOME/Documentos/pessoais/configuration/files/comandos/k8s $HOME/.local/bin/k8s
	ln -s $HOME/Documentos/pessoais/configuration/files/comandos/maplink $HOME/.local/bin/maplink
	# ln -s $HOME/Documentos/pessoais/configuration/files/comandos/backup $BIN/backup
	# ln -s $HOME/Documentos/pessoais/configuration/files/comandos/commit $BIN/commit
	# ln -s $HOME/Documentos/pessoais/configuration/files/comandos/vpnc /home/felipe/.local/bin/vpnc
	# ln -s $HOME/Documentos/pessoais/configuration/files/comandos/vpnd /home/felipe/.local/bin/vpnd
	# ln -s $HOME/Documentos/pessoais/configuration/files/comandos/vpns /home/felipe/.local/bin/vpns
}

__aliases() {
	# echo 'Creating symbolical link to bash_aliases...'
	# ln -s $HOME/Documentos/pessoais/configuration/files/bash_aliases $HOME/.bash_aliases
	ln -s $HOME/Documentos/pessoais/configuration/files/bash_aliases $HOME/.aliases
}

__shortcuts() {
	# echo 'Creating shortcut for notes in menu...'
	# ln -s $ORIGEM $DESTINO
	# ln -s $HOME/Documentos/pessoais/configuration/files/atalhos/notas.desktop $HOME/.local/share/applications/notas.desktop
	ln -s $HOME/Documentos/pessoais/configuration/files/atalhos/intellij.desktop $HOME/.local/share/applications/intellij.desktop
	ln -s $HOME/Documentos/pessoais/configuration/files/atalhos/postman.desktop $HOME/.local/share/applications/postman.desktop
}

__maplink_notes() {
	ln -s $HOME/Documentos/maplink/anotacoes $HOME/Documentos/pessoais/maplink
	cp -R /media/$USER/PENDRIVE/maplink/anotacoes ~/Documentos/maplink/
}

