#!/bin/bash
__postman(){
	sudo snap install postman
}

__discord(){
	sudo snap install discord
}

__slack(){
	sudo snap install slack
}

__teams(){
	sudo snap install teams
}

__spotify(){
	sudo snap install spotify
}

__libre_office(){
	sudo apt install libreoffice-gnome libreoffice -y
}

__whatsapp(){
	sudo snap install whatsapp-app
}

__notion(){
	sudo snap install notion-snap
}

__trello(){
	sudo snap install trello-desktop
}

__trash(){
	sudo apt install trash-cli -y
}

__gnome_tweaks(){
	sudo apt install gnome-tweaks -y
}

__gnome_extensions(){
	sudo apt install gnome-shell-extensions -y
}

__ohmyposh(){
	sudo wget https://github.com/JanDeDobbeleer/oh-my-posh/releases/latest/download/posh-linux-amd64 -O /usr/local/bin/oh-my-posh
	sudo chmod +x /usr/local/bin/oh-my-posh
}

__help(){
	echo "Help!!!"
}


__all(){
	__postman
	__discord
	__slack
	# __teams
	__spotify
	__libre_office
	# __whatsapp
	__notion
	__trello
	__trash
	__gnome_tweaks
	__gnome_extensions
	__ohmyposh
}

case $1 in
	postman) __postman;;
	discord) __discord;;
	slack) __slack;;
	teams) __teams;;
	spotify) __spotify;;
	libreoffice) __libre_office;;
	whatsapp) __whatsapp;;
	notion) __notion;;
	trello) __trello;;
	tweaks) __gnome_tweaks;;
	extensions) __gnome_extensions;;
	ohmyposh) __ohmyposh;;
	all) __all;;
	*) echo "Bad commands execution. No actions taken."; exit 1;;
esac