__all() {
	__folders
	__commands
	__aliases
	__shortcuts
	# __clone_setup_environment_files
	__setup_brave
	__gnome_extensions
	__gnome_configurations
	__ohmyposh
	# __sudoers
}

case $1 in
	folders) __folders;;
	commands) __commands;;
	aliases) __aliases;;
	shortcuts) __shortcuts;;
	sef) __clone_setup_environment_files;;
	brave) __setup_brave;;
	extensions) __gnome_extensions;;
	config) __gnome_configurations;;
	myposh) __ohmyposh;;
	all) all;;
	*) echo "No parameters provided. No actions taken."; exit 1;;
esac 

