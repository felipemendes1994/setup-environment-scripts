## CONFIGURANDO ALGUMAS COISAS

	# CONFIGURANDO PASTAS DE ARQUIVOS PESSOAIS E OS DOCUMENTOS LA DENTRO

	# CONFIGURANDO OS FAVORITOS DO NAVEGADOR

    # Criando e adicionando o diretorio .local/bin ao $PATH
	BIN="$HOME/.local/bin"
    if [[ ! -d BIN ]]; then
        mkdir $BIN
        export PATH="$BIN:$PATH"
    fi

	# Criando link simbolico dos comandos para .local/bin
	
	# Importando configuracoes ja existente do Google Chrome
	CHROME_CONFIGS="$HOME/.config/google-chrome"
	if [[ ! -d CHROME_CONFIGS ]]; then
		mv ${HOME}/.config/google-chrome ${HOME}/.config/google-chrome.old
		mv ./google-chrome ${HOME}/.config/
	fi
	
	# Criando o arquivo .bash_aliases
